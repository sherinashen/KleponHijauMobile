<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#ccfbff">

        <ImageButton
            android:id="@+id/IB1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ccfbff"
            android:contentDescription="@string/todo2"
            android:padding="10dp"
            android:src="@drawable/icon_menu" />

        <TextView
            android:id="@+id/TV1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="#ccfbff"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/option"
            android:textAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/IP1"
        android:layout_below="@id/LL1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/kuas" />

    <TextView
        android:id="@+id/TV2"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_below="@id/LL1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/IP1"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/theme"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/IP1" />
    <View
        android:layout_below="@id/IP1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/IP2"
        android:layout_below="@id/IP1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/images__5_" />

    <TextView
        android:id="@+id/TV3"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_below="@id/IP1"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/IP1"
        android:layout_toRightOf="@id/IP1"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/stikers"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <View
        android:layout_below="@id/IP2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/IP3"
        android:layout_below="@id/IP2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/jam" />

    <TextView
        android:id="@+id/TV4"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:layout_below="@id/IP2"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/IP1"
        android:layout_toRightOf="@id/IP1"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/timeline2"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <View
        android:layout_below="@id/IP3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/IP4"
        android:layout_below="@id/IP3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@drawable/world" />

    <TextView
        android:id="@+id/TV5"
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:layout_below="@id/IP3"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/IP3"
        android:layout_toRightOf="@id/IP3"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/language"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>