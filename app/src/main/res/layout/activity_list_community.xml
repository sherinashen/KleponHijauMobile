<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="#ccfbff">

        <ImageButton
            android:id="@+id/IB1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ccfbff"
            android:contentDescription="@string/todo2"
            android:padding="10dp"
            android:src="@drawable/icon_menu" />

        <TextView
            android:id="@+id/TV1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="#ccfbff"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/list_community"
            android:textAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_below="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="31dp"
            android:layout_height="226dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="151dp"
                android:layout_gravity="center"
                android:contentDescription="@string/stitch"
                android:src="@drawable/images__10_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:text="@string/the_secret"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/check_in"
                android:background="@drawable/button_rounded"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#121918"
                app:backgroundTint="#3DBDFC"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="38dp"
            android:layout_height="227dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:contentDescription="@string/stitch1"
                android:src="@drawable/images__11_" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="monospace"
                android:text="@string/korean_town"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:layout_width="99dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:padding="0dp"
                android:background="@drawable/button_rounded"
                android:text="@string/check_in"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#121918"
                app:backgroundTint="#3DBDFC"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="27dp"
            android:layout_height="225dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="#ccfbff">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ccfbff"
                android:contentDescription="@string/join"
                android:padding="0dp"
                android:src="@drawable/ic_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/join_a_community"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginEnd="25dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/B1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LL2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="151dp"
        android:layout_marginRight="151dp"
        android:gravity="center"
        android:background="@drawable/button_rounded"
        android:text="@string/create_new"
        android:textColor="@android:color/black"
        app:backgroundTint="#ccfbff"
        app:icon="@drawable/ic_add"
        app:iconTint="@android:color/black" />

</RelativeLayout>